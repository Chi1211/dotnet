@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager;
@inject UserManager<User> userInManager;

@{
    @* Check user login chưa? *@
    @* signInManager.IsSignedIn(User);
        @*lấy username *@
    var user = userInManager.GetUserName(User);
}
<ul class=" navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="navbar-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">@user</a>
        </li>
        <li class="navbar-item">
             <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="navbar-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="navbar-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }

</ul>