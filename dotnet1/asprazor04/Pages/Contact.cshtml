@page
@model Contact
<h2>Welcom to contact</h2>
<form class="bg-light p-2 m-3" method="post" asp-page="Contact">
    <div class="mb-3">
        <label class="form-label" asp-for="UseID"></label>
        <input class="form-control" asp-for="@Model.UseID"/>
        <span asp-validation-for="UseID"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="@Model.Name"/>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="@Model.Email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <button class="btn btn-danger" type="submit">Send</button>
</form>
<div class="alert alert-danger">
    <p>Th√¥ng tin user</p>
    <ul>
        <li>Id: @Model.UseID</li>
        <li>Name: @Model.Name</li>
        <li>Email: @Model.Email</li>
    </ul>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}